{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "debug": "node --inspect-brk packages/zmi/bin/zmi.js",
    "test": "zmi-test",
    "zmi-bootstrap": "lerna bootstrap",
    "zmi-build": "father-build",
    "zmi-build:watch": "father-build --watch",
    "zmi-link:zmi": "cd packages/zmi && yarn link && cd -",
    "zmi-link:build": "cd packages/zmi-build && yarn link && cd -",
    "zmi-clean:modules": "lerna clean --ignore @zmi/webpack --yes",
    "zmi-update:deps": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@octokit/core": "^3.2.4",
    "@types/jest": "^26.0.19",
    "@zmi/test": "1.0.0",
    "father-build": "^1.18.6",
    "lerna": "^3.22.1",
    "typescript": "^4.1.3"
  }
}
