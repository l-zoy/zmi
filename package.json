{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "debug": "node --inspect-brk packages/zmi/bin/zmi.js",
    "test": "zmi-test",
    "zmi-bootstrap": "lerna bootstrap",
    "zmi-nerd": "nerd build",
    "zmi-nerd:watch": "nerd build --watch",
    "zmi-link:zmi": "cd packages/zmi && yarn link && cd -",
    "zmi-link:nerd": "cd packages/zmi-nerd && yarn link && cd -",
    "zmi-clean:modules": "lerna clean --ignore @zmi/webpack --yes",
    "zmi-update:deps": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@octokit/core": "^3.2.4",
    "@types/jest": "^26.0.20",
    "lerna": "^3.22.1",
    "typescript": "^4.1.3",
    "zmi-nerd": "^1.0.2"
  }
}
