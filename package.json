  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/register": "^7.11.5",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.14.6",
    "father-build": "^1.18.5",
    "lerna": "^3.22.1"
  }
}
