{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lim-debug": "node --inspect-brk packages/lim/bin/lim.js",
    "lim-build": "father-build",
    "lim-build:watch": "father-build --watch",
    "lim-link:lim": "cd packages/lim && yarn link && cd -",
    "lim-clean:modules": "lerna clean --yes",
    "lim-update:deps": "yarn upgrade-interactive --latest"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/register": "^7.11.5",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.4",
    "father-build": "^1.18.5",
    "lerna": "^3.22.1"
  }
}
